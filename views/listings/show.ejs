<% layout("layout/boilerplate") %>

<body>
        <div class="row">
        <div class="col-8 offset-2 mt-3 mb-2">

                    <h3>Listing Details</h3>
        </div>
        <div class="card col-6 offset-2 mb-1" >
            <img src="<%=listing.image %>" class="card-img-top show-img" alt="Listing-image">
            <div class="card-body mt-2">
                <p class="card-text m-0"></p>
                    <b><%= listing.title %></b>   <br>
                    <%= listing.description %> <br>
                    &#x20B9;<%= listing.price.toLocaleString("en-IN") %> <br>
                    <%= listing.location %> <br>
                    <%= listing.country %>
                </p>
            </div>
          </div>

          <div class="btns">

              <a href="/listings/<%=listing.id %>/edit" class="btn btn-dark col-1 offset-2  ">Edit</a>
              
              <form action="/listings/<%=listing._id %>?_method=DELETE" method="POST">
                  <button class="btn btn-dark offset-5">Delete</button>
              </form>
          </div>
        </div>
          <br>
    </body>
